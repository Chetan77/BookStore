            </StackLayout>
            <Label Text=""/>-->

        <Grid BackgroundColor="Black" VerticalOptions="EndAndExpand" Margin="0,0,0,10" HeightRequest="30">
            <Label Text=" copyrights 2020 BookStore pvt ltd. All rights reserved" TextColor="White" FontSize="15"
                   HeightRequest="20"/>
        </Grid>
    </StackLayout>

</ContentPage>
    
